{
  "name": "wms-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "db:generate": "pnpm --filter @wms/database generate",
    "db:push": "pnpm --filter @wms/database push",
    "db:migrate": "pnpm --filter @wms/database migrate",
    "db:studio": "pnpm --filter @wms/database studio",
    "db:seed": "pnpm --filter @wms/database seed",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3"
  }
}
